<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_mode"
    tools:context=".MainActivity">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/select_note"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:background="@drawable/noteui"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="30dp"
       android:layout_marginEnd="10dp"
       android:layout_marginStart="10dp">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="@id/select_note"
           app:layout_constraintStart_toStartOf="@id/select_note"
           android:layout_marginStart="0dp"
           android:text="Add Note"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:textSize="40sp"
           android:layout_marginTop="20dp"
           app:layout_constraintBottom_toBottomOf="@id/select_note"
           android:layout_marginBottom="20dp"/>

       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           app:layout_constraintTop_toTopOf="@id/select_note"
           app:layout_constraintEnd_toEndOf="@id/select_note"
           app:layout_constraintBottom_toBottomOf="@id/select_note"
           android:src="@drawable/note_icon"/>

   </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/select_cart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/cartui"
        app:layout_constraintTop_toBottomOf="@id/select_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/select_cart"
            app:layout_constraintStart_toStartOf="@id/select_cart"
            android:layout_marginStart="0dp"
            android:text="Add Items"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@id/select_cart"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/select_cart"
            app:layout_constraintEnd_toEndOf="@id/select_cart"
            app:layout_constraintBottom_toBottomOf="@id/select_cart"
            android:src="@drawable/cart_icon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>